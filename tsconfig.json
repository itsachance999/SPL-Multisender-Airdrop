{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  